<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header');-%>

<body style="background-color: #ffffff;">

    <%- include('layouts/navbar');-%>

    <section class="home" id="home"></section>
    <section class="home-content" id="home-content">
        <div class="max-size">
            <div class="content">
                <div class="text">NYUST</div>
                <div class="subtext">Power Detection</div>
            </div>
        </div>
    </section>

    <div class="Plot">
        <h1>Plot</h1>
        <canvas id="myChart"></canvas>
    </div>
    <div class="Side">
        <div class="Digital" id="value">
            <h1>Now</h1>
            <% if (oneminPowerPosts.length>5) {%>
            <div>
                <h3 id="Watt-Text">Watt : </h3>
                <h5 id="Watt-Value"><%var watt = JSON.parse(wattarray)%><%=watt[watt.length-1]%></h5>
                <h5 id="Watt-Unit">kW</h5>
            </div>
            <div>
                <h3 id="voltage-Text">Voltage : </h3>
                <h5 id="voltage-Value"><%=oneminPowerPosts[oneminPowerPosts.length-1].電壓%></h5>
                <h5 id="voltage-Unit">v</h5>
            </div>
            <div>
                <h3 id="Time-Value"><%var date = JSON.parse(datearray)%><%=date[date.length-1]%></h3>
            </div>
            <% } else { %>
            <h1>No Data now!</h1>
            <% } %>
        </div>
        <div class="Control">
            <h1>Control</h1>
            <div>
                <button id="BtnOn">on</button>
                <button id="BtnOff">Off</button>
            </div>
        </div>
    </div>
    <%-include('layouts/scripts');-%>
    <script>
        const btnon = document.getElementById('BtnOn')
        const btnoff = document.getElementById('BtnOff')
        var socket = io.connect();
        setInterval(() => {
            $("#value").load("https://murmuring-temple-18681.herokuapp.com/" + " #value");
            // $("#value").load("http://localhost:4000/" + " #value");
        }, 10000);
        var Watt = document.getElementById('Watt-Value').innerHTML;
        var Dates = document.getElementById('Time-Value').innerHTML;
        var ctx = document.getElementById('myChart');
        var xdata = [];
        var ydata = [];
        xdata = "<%-date%>".split(",");
        ydata = "<%-watt%>".split(",");
        var MyChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: xdata,
                datasets: [{
                    label: '用電量(kW)',
                    data: ydata,
                    backgroundColor: 'rgba(111, 163, 204, 0.5)',
                    borderColor: '#6FA3CC',
                    scales: {
                        yAxes: [{
                            display: true,
                            ticks: {
                                suggestedMin: 0,
                                suggestedMax: 5,
                                beginAtZero: true
                            }
                        }]
                    }
                }]
            }
        });
        MyChart;
        var Timer = setInterval(function () {
            Watt = document.getElementById('Watt-Value').innerHTML;
            Dates = document.getElementById('Time-Value').innerHTML;
            if (xdata[xdata.length - 1] != Dates) {
                updateData(MyChart, Watt, Dates)
            }
        }, 1000)

        function updateData(MyChart, watt, date) {
            ydata.push(watt);
            xdata.push(date);
            ydata.shift();
            xdata.shift();
            MyChart.update();
        }

        $(btnon).click(function () {
            value = 1
            socket.emit('on', value);
        });

        $(btnoff).click(function () {
            value = 2
            socket.emit('off', value);
        });
    </script>
</body>

</html>